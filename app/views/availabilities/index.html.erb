<h1>Availabilities</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start time</th>
      <th>End time</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @availabilities.each do |availability| %>
      <tr>
        <td><%= availability.title %></td>
        <td><%= availability.start_time %></td>
        <td><%= availability.end_time %></td>
        <td><%= availability.user_id %></td>
        <td><%= link_to 'Show', user_availability_path(availability.user, availability) %></td>
        <td><%= link_to 'Edit', edit_user_availability_path(availability.user, availability) %></td>
        <td><%= link_to 'Destroy', user_availability_path(availability.user, availability), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

