      <tr class="fw-bold">
          <td scope="col">Title</td>
          <td scope="col">Start Time</td>
          <td scope="col">End Time</td>
          <td scope="col"></td>
      </tr>
      <% @user.availabilities.each do |availability| %>
        <tr>
          <td><%= availability.title %></td>
          <td><%= availability.start_time %></td>
          <td><%= availability.end_time %></td>
          <td>
