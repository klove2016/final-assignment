<%= form_for [@user, availability], class: "form-floating" do |form| %>
  <div class="form-group pt-5">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :start_time, class: "form-label" %>
    <%= form.datetime_local_field :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :end_time, class: "form-label" %>
    <%= form.datetime_local_field :end_time, class: "form-control" %>
  </div>

  <div class="form-group" >
    <%= form.submit "Submit", id:"availability-form-submit" %>
  </div>
<% end %>
