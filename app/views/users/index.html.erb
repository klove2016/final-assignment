<% if notice %>
  <div id="notice"><%= notice %></div>
<% end %>
<nav class="navbar navbar-expand-lg bg-body-tertiary">
    <div class="container-fluid">
      <h1 class="navbar-brand">Users</h1>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
              <%= link_to 'Home', users_path, class:"nav-link "  %>
          </li>
          <li class="nav-item">
            <%= link_to 'New User', new_user_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Compare Availablities', availabilities_compare_path, class: "nav-link"%>
          </li>
          
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Exisiting Users
            </a>
            <ul class="dropdown-menu">
              <% @users.each do |user| %>
                <li><%= link_to user.name, user, class: "dropdown-item"%></li>
                
              <% end %>
            </ul>
          </li>
        </ul>
      </div>
    </div>
</nav>

<body >
  <div class="accordion pt-5" id="accordionExample">
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingOne">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          See All Users
        </button>
      </h2>
      <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
        <div class="accordion-body">
            <table>
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Phone</th>
                  <th>Email</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td><%= user.name %></td>
                    <td><%= user.phone %></td>
                    <td><%= user.email %></td>
                    <td>
                      <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        User Actions
                        </button>
                        <ul class="dropdown-menu">
                          <li><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item" %></li>
                          <li><%=  link_to 'Edit', edit_user_path(user), class: "dropdown-item" %> </li>
                          <li><%= link_to 'Show', user, class: "dropdown-item"%></li>
                          <li><%= link_to 'Add Availability', new_user_availability_path(user), class: "dropdown-item"%></li>
                          <li><%= link_to 'View Availabilities', user_availabilities_path(user), class: "dropdown-item"%></li>
                        </ul>
                      </div>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
    <div class="accordion-item">
      <h2 class="accordion-header" id="headingTwo">
        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
          Select From Exisiting Users
        </button>
      </h2>
      <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
        <div class="accordion-body">
          <div class = "dropdown">
            <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false" >Click Here to Select User</button>
            <ul class="dropdown-menu">
                <% @users.each do |user| %>
                  <li><%= link_to user.name, user, class: "dropdown-item"%></li>
                  
                <% end %>
              </ul>
            </div>
        </div>
      </div>
    </div>
  </div>
</body>







